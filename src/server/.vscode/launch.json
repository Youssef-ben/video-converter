  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Run Mocha",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["-r", "ts-node/register", "--timeout", "999999", "--colors", "${workspaceFolder}/tests/**/*.test.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    }
  ]
}
